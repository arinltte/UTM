    <TextView
        android:id="@+id/textView4"
        android:layout_width="169dp"
        android:layout_height="74dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="210dp"
        android:fontFamily="@font/urbanist_semibold"
        android:text="Sign in"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/allura"
        android:text="UTM"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="142dp"
        android:layout_height="20dp"
        android:fontFamily="@font/urbanist"
        android:text="Glad to see you again"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/et_username1"
        android:layout_width="365dp"
        android:layout_height="60dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/urbanist"
        android:hint="Username"
        android:inputType="text"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/et_password1"
        android:layout_width="365dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/urbanist"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="@+id/et_username1"
        app:layout_constraintStart_toStartOf="@+id/et_username1"
        app:layout_constraintTop_toBottomOf="@+id/et_username1" />

    <Button
        android:id="@+id/bt_login1"
        android:layout_width="365dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/urbanist"
        android:text="Continue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/et_password1"
        app:layout_constraintStart_toStartOf="@+id/et_password1"
        app:layout_constraintTop_toBottomOf="@+id/et_password1" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:fontFamily="@font/urbanist"
        android:text="Are you a new user?"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/bt_login1"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="@+id/bt_login1"
        app:layout_constraintTop_toBottomOf="@+id/bt_login1" />

    <TextView
        android:id="@+id/textView_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:clickable="true"
        android:fontFamily="@font/urbanist"
        android:text="Sign up"
        android:textColor="#0000EE"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

</androidx.constraintlayout.widget.ConstraintLayout>