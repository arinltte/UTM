    <LinearLayout
        android:id="@+id/mondayLayout"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_corner_monday"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/urbanist_semibold"
            android:gravity="center_vertical"
            android:text="Monday"
            android:textColor="@android:color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/mondayArrow"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist"
            android:gravity="center"
            android:text="→"
            android:textColor="@android:color/black"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tuesdayLayout"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginTop="-15dp"
        android:background="@drawable/rounded_corner_tuesday"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="@+id/mondayLayout"
        app:layout_constraintStart_toStartOf="@+id/mondayLayout"
        app:layout_constraintTop_toBottomOf="@+id/mondayLayout">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/urbanist_semibold"
            android:gravity="center_vertical"
            android:text="Tuesday"
            android:textColor="@android:color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tuesdayArrow"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist"
            android:gravity="center"
            android:text="→"
            android:textColor="@android:color/black"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wednesdayLayout"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginTop="-15dp"
        android:background="@drawable/rounded_corner_wednesday"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tuesdayLayout"
        app:layout_constraintStart_toStartOf="@+id/tuesdayLayout"
        app:layout_constraintTop_toBottomOf="@+id/tuesdayLayout">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/urbanist_semibold"
            android:gravity="center_vertical"
            android:text="Wednesday"
            android:textColor="@android:color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/wednesdayArrow"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist"
            android:gravity="center"
            android:text="→"
            android:textColor="@android:color/white"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thursdayLayout"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginTop="-15dp"
        android:background="@drawable/rounded_corner_thursday"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="@+id/wednesdayLayout"
        app:layout_constraintStart_toStartOf="@+id/wednesdayLayout"
        app:layout_constraintTop_toBottomOf="@+id/wednesdayLayout">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/urbanist_semibold"
            android:gravity="center_vertical"
            android:text="Thursday"
            android:textColor="@android:color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/thursdayArrow"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist"
            android:gravity="center"
            android:text="→"
            android:textColor="@android:color/white"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fridayLayout"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginTop="-15dp"
        android:background="@drawable/rounded_corner_friday"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="@+id/thursdayLayout"
        app:layout_constraintStart_toStartOf="@+id/thursdayLayout"
        app:layout_constraintTop_toBottomOf="@+id/thursdayLayout">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/urbanist_semibold"
            android:gravity="center_vertical"
            android:text="Friday"
            android:textColor="@android:color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/fridayArrow"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist"
            android:gravity="center"
            android:text="→"
            android:textColor="@android:color/white"
            android:textSize="34sp" />
    </LinearLayout>

    <Button
        android:id="@+id/addBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/urbanist"
        android:gravity="center"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@+id/fridayLayout"
        app:layout_constraintTop_toBottomOf="@+id/fridayLayout" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="250dp"
        android:layout_height="74dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="129dp"
        android:fontFamily="@font/urbanist_semibold"
        android:text="Timetable"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/allura"
        android:text="UTM"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="parent"  />

    <TextView
        android:id="@+id/setting"
        android:layout_width="50dp"
        android:layout_height="74dp"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/urbanist"
        android:gravity="center"
        android:text="≡"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>